
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="card card-edit-account">
    <div class="card-header">
      Update your account
    </div>

    <div class="field">
        <%= f.label :name, class:"form-label"%>
        <%= f.text_field :name, class:"form-control field-name", placeholder:"Enter name" %>
    </div>

    <div class="field">
        <%= f.label :username, class:"form-label"%>
        <%= f.text_field :username, class:"form-control field-name", placeholder:"Enter username" %>
    </div>

    <div class="field">
      <%= f.label :email, class:"form-label" %><br />
      <%= f.email_field :email, autofocus: true, class:"form-control field-name", autocomplete: "email", placeholder:"user@example.com" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, class:"form-label" %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, class:"form-control field-name", autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em class="form-label"><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class:"form-label" %><br />
      <%= f.password_field :password_confirmation, class:"form-control field-name", autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password, class:"form-label" %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control field-name" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class:"btn btn-primary btn-sm btn-edit-account" %>
    </div>

  </div>
<% end %>

