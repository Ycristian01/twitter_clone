<h2 class="index-title">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  
  <div class="card card-sign-up">
    <div class="card-header">
      Create your account
    </div>
    
    <div class="field">
        <%= f.label :name, class:"form-label"%>
        <%= f.text_field :name, class:"form-control field-name", placeholder:"Enter name" %>
    </div>

    <div class="field">
        <%= f.label :username, class:"form-label"%>
        <%= f.text_field :username, class:"form-control field-name", placeholder:"Enter username" %>
    </div>

    <div class="field">
      <%= f.label :email, class:"form-label" %><br />
      <%= f.email_field :email, autofocus: true, class:"form-control field-name", autocomplete: "email", placeholder:"user@example.com" %>
    </div>

    <div class="field">
      <%= f.label :password, class:"form-label" %>
      <% if @minimum_password_length %>
      <em class="form-label">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, class:"form-control field-name", autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class:"form-label" %><br />
      <%= f.password_field :password_confirmation, class:"form-control field-name", autocomplete: "new-password" %>
    </div>

    <div class="actions submit-button">
      <%= f.submit "Sign up", class:"btn btn-primary btn-sm" %>
    </div>

  </div>
<% end %>

<%= render "users/shared/links" %>
